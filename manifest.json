{
  "manifest_version": 3,
  "name": "Chinese Lens",
  "version": "1.0",
  "description": "Select Chinese text to see English translation and pinyin",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
